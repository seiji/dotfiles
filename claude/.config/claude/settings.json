{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enableAllProjectMcpServers": true,
  "includeCoAuthoredBy": false,
  "mcpServers": {
    "github": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server:latest"
      ]
    }
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "mcp__github__pull_request_read",
      "mcp__github__pull_request_review_write",
      "Read(~/.claude/**)",
      "Read(~/.config/claude/**)"
    ],
    "defaultMode": "plan",
    "deny": [
      "Bash(rm:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.config/claude/shell/statusline.sh"
  }
}
