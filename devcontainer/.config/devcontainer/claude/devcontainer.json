{
  "name": "Claude Code",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-24.04",
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/home/vscode/.config/claude",
    "DISPLAY": "${localEnv:DISPLAY}",
    "GITHUB_PERSONAL_ACCESS_TOKEN": "${localEnv:GITHUB_PERSONAL_ACCESS_TOKEN}",
    "GH_TOKEN": "${localEnv:GITHUB_PERSONAL_ACCESS_TOKEN}",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1",
    "UV_CACHE_DIR": "${containerWorkspaceFolder}/.cache/uv",
    "UV_COMPILE_BYTECODE": "1",
    "UV_LINK_MODE": "copy",
    "UV_PROJECT_ENVIRONMENT": "/home/vscode/.venv",
    "UV_SYSTEM_PYTHON": "1"
  },
  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
    "ghcr.io/devcontainers-extra/features/apt-packages:1": {
      "packages": "git-secrets,pinentry-tty"
    },
    "ghcr.io/jsburckhardt/devcontainer-features/codex:1": {}
  },
  "runArgs": [
    "--init"
  ],
  "mounts": [
    "type=volume,source=claude-credentials,target=/home/vscode/.claude-credentials",
    "type=bind,source=${localEnv:HOME}/.config/claude/dev.mcp.json,target=/home/vscode/.config/claude/dev.mcp.json,readonly",
    "type=bind,source=${localEnv:HOME}/.config/claude/rules,target=/home/vscode/.config/claude/rules,readonly",
    "type=bind,source=${localEnv:HOME}/.config/claude/settings.json,target=/home/vscode/.config/claude/settings.json,readonly",
    "type=bind,source=${localEnv:HOME}/.config/claude/shell,target=/home/vscode/.config/claude/shell,readonly",
    "type=bind,source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,readonly",
    "type=bind,source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,readonly",
    "type=bind,source=${localEnv:HOME}/.git-templates,target=/home/vscode/.git-templates,readonly",
    "type=bind,source=${localEnv:HOME}/.gnupg/pubring.kbx,target=/home/vscode/.gnupg/pubring.kbx,readonly",
    "type=bind,source=${localEnv:HOME}/.gnupg/trustdb.gpg,target=/home/vscode/.gnupg/trustdb.gpg,readonly",
    "type=bind,source=${localEnv:HOME}/.gnupg/private-keys-v1.d,target=/home/vscode/.gnupg/private-keys-v1.d,readonly"
  ],
  "postCreateCommand": "sudo chown vscode:vscode /home/vscode/.gnupg /home/vscode/.config/claude /home/vscode/.claude-credentials && chmod 700 /home/vscode/.gnupg && echo 'pinentry-program /usr/bin/pinentry-tty' > /home/vscode/.gnupg/gpg-agent.conf && ln -sf /home/vscode/.claude-credentials/.claude.json /home/vscode/.config/claude/.claude.json"
}
