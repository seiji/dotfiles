# homebrew
function brew_bundle_dump() {
  brew bundle dump --global --force $opts
  brew bundle cleanup --global
}

# pip
function pip() {
  local CMD=pip3
  $CMD $*
  if [[ $? -eq 0 ]]; then
    $CMD freeze > ~/requirements.txt
  fi
}

